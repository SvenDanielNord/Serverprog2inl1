<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN"  
            "http://www.springframework.org/dtd/spring-beans-2.0.dtd">

<beans>
	<!--Template-->
	<bean id="jdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate">
		<constructor-arg ref="dataSource"></constructor-arg>
	</bean>
	<!--Dao-->
	<bean id="customerDao" class="com.yrgo.dataaccess.CustomerDaoJdbcTemplateImpl" init-method="createTables">
		<constructor-arg ref="jdbcTemplate"/>
	</bean>
	<!--Beans-->
	<bean id="customerManagementService" class="com.yrgo.services.customers.CustomerManagementServiceProductionImpl">
		<property name="dao" ref="customerDao"/>
	</bean>

	<bean id="diaryManagementService" class="com.yrgo.services.diary.DiaryManagementServiceMockImpl"/>
	<bean id="callService" class="com.yrgo.services.calls.CallHandlingServiceImpl">
		<constructor-arg ref="customerManagementService"></constructor-arg>
		<constructor-arg ref="diaryManagementService"></constructor-arg>

	</bean>

	<!-- DataSources -->
	<bean id="dataSource" class="org.apache.commons.dbcp.BasicDataSource" destroy-method="close">
		<property name= "driverClassName" value="org.hsqldb.jdbcDriver" />
		<property name= "url" value
				="jdbc:hsqldb:file:database.dat;shutdown=true" />
		<property name = "username" value="sa"/>
		<property name="password" value ="" />
	</bean>


</beans>
